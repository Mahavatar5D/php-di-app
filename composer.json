{
  "name": "vendor_name/php-di-app",
  "description": "description",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "TMC",
      "email": "email@example.com"
    }
  ],
  "require": {
    "php-di/php-di": "^6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^3",
    "phpstan/phpstan": "^1",
    "pimple/pimple": "3.5.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App/",
      "User\\": "src/User/"
    },
    "files": [
      "config/container.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "stan": "vendor/bin/phpstan --xdebug analyse --level 8 src tests",
    "cs":   "vendor/bin/phpcs src/User"
  },
  "scripts-descriptions": {
    "stan": "Run static analysis with phpstan",
    "cs":   "Check coding style compliance to PSR12 with phpcs"
  }
}
